      <table>
        <search>
          <query>index=home error* OR fail* OR critcial* OR issue* OR problem*  | search sourcetype=$sourcetype$  | dedup pid | stats dc(pid) as PID by process | sort -PID</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
